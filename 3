        info_frame.pack(fill=tk.X, padx=15, pady=(5, 10))
        info_frame.pack_propagate(False)

        self.course_count_label = tk.Label(
            info_frame,
            text="إجمالي مسميات الدورات: 0",
            font=("Tajawal", 14, "bold"),
            bg="#1E3A5F",
            fg="#FFFFFF"
        )
        self.course_count_label.pack(expand=True)

        # زر الإغلاق
        close_btn = tk.Button(
            manage_window,
            text="إغلاق",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["dark"],
            fg="white",
            padx=30,
            pady=12,
            bd=0,
            relief=tk.FLAT,
            cursor="hand2",
            command=manage_window.destroy
        )
        close_btn.pack(pady=10)

    def _load_course_names_with_subjects(self):
        """تحميل مسميات الدورات مع المواد"""
        # مسح البيانات الحالية
        for item in self.course_names_tree.get_children():
            self.course_names_tree.delete(item)

        try:
            cursor = self.db_conn.cursor()

            # الحصول على جميع الدورات
            cursor.execute("""
                SELECT id, name, description, created_date 
                FROM course_names 
                WHERE is_active = 1 
                ORDER BY name
            """)

            courses = cursor.fetchall()

            for index, course in enumerate(courses):
                course_id, name, description, created_date = course

                # الحصول على مواد الدورة
                cursor.execute("""
                    SELECT subject_name, subject_order 
                    FROM course_default_subjects 
                    WHERE course_name_id = ? 
                    ORDER BY subject_order
                """, (course_id,))

                subjects = cursor.fetchall()

                # تجميع أسماء المواد
                subject_names = []
                for subj in subjects:
                    subject_names.append(f"{subj[1]}. {subj[0]}")

                subjects_text = " | ".join(subject_names) if subject_names else "لا توجد مواد"
                subject_count = len(subjects)

                # إضافة للجدول
                tag = 'evenrow' if index % 2 == 0 else 'oddrow'
                self.course_names_tree.insert("", tk.END,
                                              values=(course_id, name, subjects_text, subject_count, created_date),
                                              tags=(tag,))

            # تحديث العداد
            self.course_count_label.config(text=f"إجمالي مسميات الدورات: {len(courses)}")

        except Exception as e:
            print(f"خطأ في تحميل مسميات الدورات: {e}")

    def _add_course_name_with_subjects(self, parent_window):
        """إضافة مسمى دورة جديد مع المواد"""
        add_window = tk.Toplevel(parent_window)
        add_window.title("إضافة مسمى دورة جديد")
        add_window.geometry("800x700")
        add_window.configure(bg=self.COLORS["background"])
        add_window.transient(parent_window)
        add_window.grab_set()

        # توسيط النافذة
        add_window.update_idletasks()
        x = (add_window.winfo_screenwidth() - 800) // 2
        y = (add_window.winfo_screenheight() - 700) // 2
        add_window.geometry(f"800x700+{x}+{y}")

        # العنوان
        header = tk.Label(
            add_window,
            text="إضافة مسمى دورة جديد",
            font=("Tajawal", 20, "bold"),
            bg=self.COLORS["primary"],
            fg="white",
            pady=20
        )
        header.pack(fill=tk.X)

        # إطار المحتوى الرئيسي
        main_frame = tk.Frame(add_window, bg=self.COLORS["background"])
        main_frame.pack(fill=tk.BOTH, expand=True, padx=20, pady=20)

        # إطار معلومات الدورة
        info_frame = tk.Frame(main_frame, bg=self.COLORS["surface"], relief=tk.RIDGE, bd=1)
        info_frame.pack(fill=tk.X, pady=(0, 20))

        info_content = tk.Frame(info_frame, bg=self.COLORS["surface"], padx=30, pady=20)
        info_content.pack(fill=tk.X)

        # حقل اسم الدورة
        tk.Label(
            info_content,
            text="اسم الدورة *",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["surface"]
        ).grid(row=0, column=0, sticky=tk.W, pady=10)

        name_entry = tk.Entry(info_content, font=("Tajawal", 13), width=40)
        name_entry.grid(row=0, column=1, pady=10, padx=10)

        # حقل الوصف
        tk.Label(
            info_content,
            text="الوصف (اختياري)",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["surface"]
        ).grid(row=1, column=0, sticky=tk.W, pady=10)

        desc_entry = tk.Entry(info_content, font=("Tajawal", 13), width=40)
        desc_entry.grid(row=1, column=1, pady=10, padx=10)

        # إطار المواد
        subjects_frame = tk.Frame(main_frame, bg=self.COLORS["surface"], relief=tk.RIDGE, bd=1)
        subjects_frame.pack(fill=tk.BOTH, expand=True)

        # عنوان قسم المواد
        subjects_header = tk.Frame(subjects_frame, bg=self.COLORS["secondary"], height=40)
        subjects_header.pack(fill=tk.X)
        subjects_header.pack_propagate(False)

        tk.Label(
            subjects_header,
            text="مواد الدورة",
            font=("Tajawal", 16, "bold"),
            bg=self.COLORS["secondary"],
            fg="white"
        ).pack(expand=True)

        # إطار قابل للتمرير للمواد
        subjects_container = tk.Frame(subjects_frame, bg=self.COLORS["surface"])
        subjects_container.pack(fill=tk.BOTH, expand=True, padx=20, pady=20)

        # Canvas للتمرير
        canvas = tk.Canvas(subjects_container, bg=self.COLORS["surface"], highlightthickness=0)
        scrollbar = ttk.Scrollbar(subjects_container, orient="vertical", command=canvas.yview)
        scrollable_frame = tk.Frame(canvas, bg=self.COLORS["surface"])

        scrollable_frame.bind(
            "<Configure>",
            lambda e: canvas.configure(scrollregion=canvas.bbox("all"))
        )

        canvas.create_window((0, 0), window=scrollable_frame, anchor="nw")
        canvas.configure(yscrollcommand=scrollbar.set)

        subjects_entries = []

        def add_subject():
            """إضافة مادة جديدة"""
            subject_frame = tk.Frame(scrollable_frame, bg=self.COLORS["surface"], pady=5)
            subject_frame.pack(fill=tk.X, padx=10)

            num = len(subjects_entries) + 1

            tk.Label(
                subject_frame,
                text=f"المادة {num}:",
                font=("Tajawal", 12, "bold"),
                bg=self.COLORS["surface"],
                width=10
            ).pack(side=tk.LEFT, padx=(0, 10))

            subject_entry = tk.Entry(
                subject_frame,
                font=("Tajawal", 12),
                width=40
            )
            subject_entry.pack(side=tk.LEFT, fill=tk.X, expand=True, padx=(0, 10))

            def remove_this():
                subject_frame.destroy()
                subjects_entries.remove(subject_entry)
                # إعادة ترقيم المواد
                for i, entry in enumerate(subjects_entries):
                    parent = entry.master
                    label = parent.winfo_children()[0]
                    label.config(text=f"المادة {i + 1}:")

            remove_btn = tk.Button(
                subject_frame,
                text="حذف",
                font=("Tajawal", 11, "bold"),
                bg=self.COLORS["danger"],
                fg="white",
                bd=0,
                padx=15,
                pady=5,
                cursor="hand2",
                command=remove_this
            )
            remove_btn.pack(side=tk.RIGHT)

            subjects_entries.append(subject_entry)
            canvas.update_idletasks()
            canvas.yview_moveto(1.0)

        # إضافة 3 مواد افتراضياً
        for _ in range(3):
            add_subject()

        canvas.pack(side=tk.LEFT, fill=tk.BOTH, expand=True)
        scrollbar.pack(side=tk.RIGHT, fill=tk.Y)

        # زر إضافة مادة
        add_subject_btn = tk.Button(
            subjects_frame,
            text="+ إضافة مادة جديدة",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["secondary"],
            fg="white",
            bd=0,
            padx=25,
            pady=10,
            cursor="hand2",
            command=add_subject
        )
        add_subject_btn.pack(pady=10)

        # إطار الأزرار السفلية
        buttons_frame = tk.Frame(add_window, bg=self.COLORS["background"])
        buttons_frame.pack(fill=tk.X, pady=20)

        def save_course_with_subjects():
            name = name_entry.get().strip()
            description = desc_entry.get().strip()

            if not name:
                messagebox.showwarning("تنبيه", "يرجى إدخال اسم الدورة")
                return

            # جمع المواد
            subjects = []
            for i, entry in enumerate(subjects_entries):
                subject_name = entry.get().strip()
                if subject_name:
                    subjects.append((subject_name, i + 1))

            try:
                cursor = self.db_conn.cursor()

                # إضافة الدورة
                cursor.execute("""
                    INSERT INTO course_names (name, description, created_date)
                    VALUES (?, ?, ?)
                """, (name, description, datetime.now().strftime("%Y-%m-%d")))

                course_id = cursor.lastrowid

                # إضافة المواد إذا وجدت
                for subject_name, order in subjects:
                    cursor.execute("""
                        INSERT INTO course_default_subjects 
                        (course_name_id, subject_name, subject_order)
                        VALUES (?, ?, ?)
                    """, (course_id, subject_name, order))

                self.db_conn.commit()

                messagebox.showinfo("نجاح", "تم إضافة مسمى الدورة والمواد بنجاح")
                add_window.destroy()
                self._load_course_names_with_subjects()

            except sqlite3.IntegrityError:
                messagebox.showerror("خطأ", "اسم الدورة موجود مسبقاً")
            except Exception as e:
                messagebox.showerror("خطأ", f"حدث خطأ: {str(e)}")

        # زر الحفظ
        save_btn = tk.Button(
            buttons_frame,
            text="حفظ",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["success"],
            fg="white",
            padx=30,
            pady=10,
            bd=0,
            relief=tk.FLAT,
            cursor="hand2",
            command=save_course_with_subjects
        )
        save_btn.pack(side=tk.LEFT, padx=20)

        # زر الإلغاء
        cancel_btn = tk.Button(
            buttons_frame,
            text="إلغاء",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["danger"],
            fg="white",
            padx=30,
            pady=10,
            bd=0,
            relief=tk.FLAT,
            cursor="hand2",
            command=add_window.destroy
        )
        cancel_btn.pack(side=tk.RIGHT, padx=20)

    def _edit_course_name_and_subjects(self, parent_window):
        """تعديل مسمى دورة والمواد"""
        selection = self.course_names_tree.selection()
        if not selection:
            messagebox.showinfo("تنبيه", "يرجى اختيار مسمى لتعديله")
            return

        item = self.course_names_tree.item(selection[0])
        values = item['values']
        course_id = values[0]
        course_name = values[1]

        # نافذة التعديل
        edit_window = tk.Toplevel(parent_window)
        edit_window.title(f"تعديل: {course_name}")
        edit_window.geometry("800x700")
        edit_window.configure(bg=self.COLORS["background"])
        edit_window.transient(parent_window)
        edit_window.grab_set()

        # توسيط النافذة
        edit_window.update_idletasks()
        x = (edit_window.winfo_screenwidth() - 800) // 2
        y = (edit_window.winfo_screenheight() - 700) // 2
        edit_window.geometry(f"800x700+{x}+{y}")

        # العنوان
        header = tk.Label(
            edit_window,
            text="تعديل مسمى الدورة والمواد",
            font=("Tajawal", 20, "bold"),
            bg=self.COLORS["warning"],
            fg="white",
            pady=20
        )
        header.pack(fill=tk.X)

        # إطار المحتوى الرئيسي
        main_frame = tk.Frame(edit_window, bg=self.COLORS["background"])
        main_frame.pack(fill=tk.BOTH, expand=True, padx=20, pady=20)

        # إطار معلومات الدورة
        info_frame = tk.Frame(main_frame, bg=self.COLORS["surface"], relief=tk.RIDGE, bd=1)
        info_frame.pack(fill=tk.X, pady=(0, 20))

        info_content = tk.Frame(info_frame, bg=self.COLORS["surface"], padx=30, pady=20)
        info_content.pack(fill=tk.X)

        # الحصول على بيانات الدورة
        cursor = self.db_conn.cursor()
        cursor.execute("""
            SELECT name, description FROM course_names WHERE id = ?
        """, (course_id,))
        course_data = cursor.fetchone()

        # حقل اسم الدورة
        tk.Label(
            info_content,
            text="اسم الدورة *",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["surface"]
        ).grid(row=0, column=0, sticky=tk.W, pady=10)

        name_entry = tk.Entry(info_content, font=("Tajawal", 13), width=40)
        name_entry.insert(0, course_data[0])
        name_entry.grid(row=0, column=1, pady=10, padx=10)

        # حقل الوصف
        tk.Label(
            info_content,
            text="الوصف (اختياري)",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["surface"]
        ).grid(row=1, column=0, sticky=tk.W, pady=10)

        desc_entry = tk.Entry(info_content, font=("Tajawal", 13), width=40)
        desc_entry.insert(0, course_data[1] or "")
        desc_entry.grid(row=1, column=1, pady=10, padx=10)

        # إطار المواد
        subjects_frame = tk.Frame(main_frame, bg=self.COLORS["surface"], relief=tk.RIDGE, bd=1)
        subjects_frame.pack(fill=tk.BOTH, expand=True)

        # عنوان قسم المواد
        subjects_header = tk.Frame(subjects_frame, bg=self.COLORS["secondary"], height=40)
        subjects_header.pack(fill=tk.X)
        subjects_header.pack_propagate(False)

        tk.Label(
            subjects_header,
            text="مواد الدورة",
            font=("Tajawal", 16, "bold"),
            bg=self.COLORS["secondary"],
            fg="white"
        ).pack(expand=True)

        # إطار قابل للتمرير للمواد
        subjects_container = tk.Frame(subjects_frame, bg=self.COLORS["surface"])
        subjects_container.pack(fill=tk.BOTH, expand=True, padx=20, pady=20)

        # Canvas للتمرير
        canvas = tk.Canvas(subjects_container, bg=self.COLORS["surface"], highlightthickness=0)
        scrollbar = ttk.Scrollbar(subjects_container, orient="vertical", command=canvas.yview)
        scrollable_frame = tk.Frame(canvas, bg=self.COLORS["surface"])

        scrollable_frame.bind(
            "<Configure>",
            lambda e: canvas.configure(scrollregion=canvas.bbox("all"))
        )

        canvas.create_window((0, 0), window=scrollable_frame, anchor="nw")
        canvas.configure(yscrollcommand=scrollbar.set)

        subjects_entries = []
        subjects_to_delete = []  # لتتبع المواد المحذوفة

        def add_subject(subject_data=None):
            """إضافة مادة جديدة أو موجودة"""
            subject_frame = tk.Frame(scrollable_frame, bg=self.COLORS["surface"], pady=5)
            subject_frame.pack(fill=tk.X, padx=10)

            num = len(subjects_entries) + 1

            tk.Label(
                subject_frame,
                text=f"المادة {num}:",
                font=("Tajawal", 12, "bold"),
                bg=self.COLORS["surface"],
                width=10
            ).pack(side=tk.LEFT, padx=(0, 10))

            subject_entry = tk.Entry(
                subject_frame,
                font=("Tajawal", 12),
                width=40
            )
            subject_entry.pack(side=tk.LEFT, fill=tk.X, expand=True, padx=(0, 10))

            # إذا كانت هناك بيانات موجودة
            if subject_data:
                subject_entry.insert(0, subject_data[1])
                subject_entry.subject_id = subject_data[0]  # حفظ ID المادة
            else:
                subject_entry.subject_id = None  # مادة جديدة

            def remove_this():
                if hasattr(subject_entry, 'subject_id') and subject_entry.subject_id:
                    subjects_to_delete.append(subject_entry.subject_id)
                subject_frame.destroy()
                subjects_entries.remove(subject_entry)
                # إعادة ترقيم المواد
                for i, entry in enumerate(subjects_entries):
                    parent = entry.master
                    label = parent.winfo_children()[0]
                    label.config(text=f"المادة {i + 1}:")

            remove_btn = tk.Button(
                subject_frame,
                text="حذف",
                font=("Tajawal", 11, "bold"),
                bg=self.COLORS["danger"],
                fg="white",
                bd=0,
                padx=15,
                pady=5,
                cursor="hand2",
                command=remove_this
            )
            remove_btn.pack(side=tk.RIGHT)

            subjects_entries.append(subject_entry)
            canvas.update_idletasks()
            canvas.yview_moveto(1.0)

        # تحميل المواد الموجودة
        cursor.execute("""
            SELECT id, subject_name, subject_order 
            FROM course_default_subjects 
            WHERE course_name_id = ? 
            ORDER BY subject_order
        """, (course_id,))

        existing_subjects = cursor.fetchall()

        # إضافة المواد الموجودة
        for subject in existing_subjects:
            add_subject(subject)

        # إذا لم تكن هناك مواد، أضف 3 فارغة
        if not existing_subjects:
            for _ in range(3):
                add_subject()

        canvas.pack(side=tk.LEFT, fill=tk.BOTH, expand=True)
        scrollbar.pack(side=tk.RIGHT, fill=tk.Y)

        # زر إضافة مادة
        add_subject_btn = tk.Button(
            subjects_frame,
            text="+ إضافة مادة جديدة",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["secondary"],
            fg="white",
            bd=0,
            padx=25,
            pady=10,
            cursor="hand2",
            command=lambda: add_subject()
        )
        add_subject_btn.pack(pady=10)

        # إطار الأزرار السفلية
        buttons_frame = tk.Frame(edit_window, bg=self.COLORS["background"])
        buttons_frame.pack(fill=tk.X, pady=20)

        def save_changes():
            name = name_entry.get().strip()
            description = desc_entry.get().strip()

            if not name:
                messagebox.showwarning("تنبيه", "يرجى إدخال اسم الدورة")
                return

            # جمع المواد
            subjects = []
            for i, entry in enumerate(subjects_entries):
                subject_name = entry.get().strip()
                if subject_name:
                    subjects.append({
                        'id': getattr(entry, 'subject_id', None),
                        'name': subject_name,
                        'order': i + 1
                    })

            try:
                cursor = self.db_conn.cursor()

                # تحديث معلومات الدورة
                cursor.execute("""
                    UPDATE course_names 
                    SET name = ?, description = ?
                    WHERE id = ?
                """, (name, description, course_id))

                # حذف المواد المحذوفة
                for subject_id in subjects_to_delete:
                    cursor.execute("DELETE FROM course_default_subjects WHERE id = ?", (subject_id,))

                # تحديث أو إضافة المواد
                for subject in subjects:
                    if subject['id']:  # مادة موجودة
                        cursor.execute("""
                            UPDATE course_default_subjects 
                            SET subject_name = ?, subject_order = ?
                            WHERE id = ?
                        """, (subject['name'], subject['order'], subject['id']))
                    else:  # مادة جديدة
                        cursor.execute("""
                            INSERT INTO course_default_subjects 
                            (course_name_id, subject_name, subject_order)
                            VALUES (?, ?, ?)
                        """, (course_id, subject['name'], subject['order']))

                self.db_conn.commit()

                messagebox.showinfo("نجاح", "تم تحديث مسمى الدورة والمواد بنجاح")
                edit_window.destroy()
                self._load_course_names_with_subjects()

            except Exception as e:
                self.db_conn.rollback()
                messagebox.showerror("خطأ", f"حدث خطأ: {str(e)}")

        # زر الحفظ
        save_btn = tk.Button(
            buttons_frame,
            text="حفظ التغييرات",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["warning"],
            fg="white",
            padx=30,
            pady=10,
            bd=0,
            relief=tk.FLAT,
            cursor="hand2",
            command=save_changes
        )
        save_btn.pack(side=tk.LEFT, padx=20)

        # زر الإلغاء
        cancel_btn = tk.Button(
            buttons_frame,
            text="إلغاء",
            font=("Tajawal", 14, "bold"),
            bg=self.COLORS["danger"],
            fg="white",
            padx=30,
            pady=10,
            bd=0,
            relief=tk.FLAT,
            cursor="hand2",
            command=edit_window.destroy
        )
        cancel_btn.pack(side=tk.RIGHT, padx=20)

    def _delete_course(self):
        """حذف دورة"""
        messagebox.showinfo("قيد التطوير", "ميزة حذف الدورات قيد التطوير")

    def _create_users_tab(self):
